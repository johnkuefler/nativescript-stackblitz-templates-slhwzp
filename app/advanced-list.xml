<Page loaded="pageLoaded">
    <StackLayout>
        <ListView id="myListView" itemTap="onItemTap">
            <ListView.itemTemplate>
                <StackLayout orientation="horizontal">
                    <Button class="text-2xl font-bold" width="100" height="100" text="{{ initials }}" style="{{squareColor}}"/>
                    <StackLayout >
                        <Label class="text-xl font-bold" text="{{ name }}" />
                        <Label class="color-gray-500" text="{{ email }}" />
                        <Label class="color-gray-500" text="{{ phone }}" />
                        <Label class="color-gray-500" text="{{ company.name }}" />
                    </StackLayout>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>
